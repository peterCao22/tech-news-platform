{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "composite": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@/api/*": ["./apps/api/src/*"],
      "@/shared/*": ["./packages/shared/src/*"],
      "@/ui/*": ["./packages/ui/src/*"],
      "@/database/*": ["./packages/database/src/*"],
      "@/config/*": ["./packages/config/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "coverage"
  ]
}
